        },
        {
          "name": "button",
          "type": "string",
          "maxLength": 255
        }
      ],
      "responses": {
        "response": {
          "$ref": "../prettyCards/responses.json#/definitions/prettyCards_edit_response"
        }
      },
      "errors": [
        {
          "$ref": "../errors.json#/errors/api_error_pretty_cards_card_not_found"
        }
      ]
    },
    {
      "name": "prettyCards.get",
      "access_token_type": [
        "user"
      ],
      "parameters": [
        {
          "name": "owner_id",
          "type": "integer",
          "required": true
        },
        {
          "name": "offset",
          "type": "integer",
          "default": 0,
          "minimum": 0
