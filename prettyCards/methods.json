          "type": "integer",
          "required": true
        },
        {
          "name": "card_ids",
          "type": "array",
          "required": true,
          "items": {
            "type": "integer"
          },
          "maxItems": 10
        }
      ],
      "responses": {
        "response": {
          "$ref": "../prettyCards/responses.json#/definitions/prettyCards_getById_response"
        }
      }
