        {
          "name": "city_id",
          "type": "integer",
          "required": true,
          "minimum": 0
        },
        {
          "name": "offset",
          "type": "integer",
          "minimum": 0
        },
        {
          "name": "count",
          "type": "integer",
          "default": 100,
          "minimum": 0,
          "maximum": 500
        },
        {
          "name": "extended",
          "type": "boolean",
          "default": false
        }
      ],
      "responses": {
        "response": {
          "$ref": "../database/responses.json#/definitions/database_getMetroStations_response"
